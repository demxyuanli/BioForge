{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AiForger Pro",
  "version": "1.0.1",
  "identifier": "com.aiforger.pro",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build && npm run build:backend",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "AiForger Pro",
        "visible": false,
        "width": 1400,
        "height": 900,
        "center": true,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "minWidth": 1000,
        "minHeight": 600
      },
      {
        "label": "splashscreen",
        "title": "Starting AiForger Pro",
        "url": "splash.html",
        "width": 520,
        "height": 300,
        "center": true,
        "decorations": false,
        "transparent": false,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../python-backend/dist/aiforger-backend.exe"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
